{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
        "~/*": ["./src/*"],
        "~": ["./src"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/**/*"],
}
